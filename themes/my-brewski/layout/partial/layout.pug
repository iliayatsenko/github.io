doctype
html(lang=config.language)
    head
        include head.pug
    body
        .wrap#barba-wrapper
            header
                h1.branding
                    a(href=url_for(''), title=config.title)
                        img.logo-image(src=url_for(theme.logo), alt='logo')
                        = config.title
                include nav.pug

            .barba-container
                main.container
                    block container
                footer
                    block copyright
        include scripts.pug
