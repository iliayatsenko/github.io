mixin tags()
    div.home.tags-list
        p
            != __('tags') + ': '
        ul
            - const tags_sorted = site.tags.data.toSorted((a, b) => a.name.localeCompare(b.name));
            each tag in tags_sorted
                li
                    a(href=relative_url(url, tag.permalink), title=tag.name)
                        |
                        |
                        span.tag-prefix
                            != '#'
                        != tag.name

mixin tag()
    p.tag.current
        != __('posts_tagged') + ' '
        span.tag-prefix
            != '#'
        != page.tag
