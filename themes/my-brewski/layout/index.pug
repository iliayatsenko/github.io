extends partial/layout.pug

block container
    include mixins/post.pug
    include mixins/tag.pug
    include mixins/category.pug

    - if (is_home())
        +tags()
        +categories()
    - if (is_tag())
        +tag()
    - if (is_category())
        +category()

    +posts()

    - if (is_home())
        div.paginator
            p
                != __('pages') + ': '
            != paginator(prev_next=false)

        include partial/subscribe-form.html

block copyright
    include partial/copyright.pug
